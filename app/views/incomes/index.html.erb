<% provide(:title, "All data") %>
<div>
  <p id="notice"><%= notice %></p>
<%= link_to 'Add New User', new_user_path, class: "button radius"%> 
  
  <h1>Listing Users</h1>

  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <%@incomes.each do |income| %>
        <tr>
          <td><%unless User.find_by(id: income.user_id).admin?%>
                <%=income.id%>
            <%else%>
            Admin
            <%end%></td>
          <td><%=User.find_by(id: income.user_id).first_name %></td>
          <td><%=User.find_by(id: income.user_id).last_name %></td>
          <td><%= link_to 'Show', income_path(income) %></td>
          <td><%= link_to 'Edit', edit_income_path(income) %></td>
          <td><%= link_to 'Delete', income_path(income), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>


</div>
